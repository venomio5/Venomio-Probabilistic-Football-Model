{
  "build": {
    "command": "pip install -r requirements.txt"
  },
  "startCommand": "python buhotraderbot.py",
  "triggers": [
    {
      "name": "StartBot",
      "schedule": "0 13 * * *",
      "command": "python buhotraderbot.py"
    },
    {
      "name": "StopBot",
      "schedule": "0 4 * * *",
      "command": "pkill -f buhotraderbot.py"
    }
  ]
}
